{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "Node16",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "declaration": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@/api/*": ["api/*"],
            "@/app/*": ["app/*"],
            "@/components/*": ["components/*"],
            "@/common-components/*": ["common-components/*"],
            "@/constants/*": ["constants/*"],
            "@/ducks/*": ["ducks/*"],
            "@/hooks/*": ["hooks/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
